{
  "permissions": {
    "allow": [
      "comment: === 読み取り専用操作（常に安全） ===",
      "Read",
      "Glob",
      "Grep",
      "WebSearch",
      "WebFetch(domain:uxdaystokyo.com)",
      "WebFetch(domain:fullcalendar.io)",
      "WebFetch(domain:1password.com)",
      "WebFetch(domain:developer.1password.com)",
      "WebFetch(domain:github.com)",

      "comment: === 基本的なファイル操作（読み取り系） ===",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(tree:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(awk:*)",
      "Bash(sort:*)",

      "comment: === Git操作（読み取り系のみ自動承認） ===",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git branch:*)",
      "Bash(git remote:*)",
      "comment: git add/commitは都度確認のため除外",

      "comment: === npm/node基本コマンド ===",
      "Bash(npm run dev:*)",
      "Bash(npm run build:*)",
      "Bash(npm run lint:*)",
      "Bash(npm run typecheck:*)",
      "Bash(npm test:*)",
      "Bash(npm run smart:*)",
      "Bash(npm run 1password:*)",
      "Bash(npm run docs:*)",
      "Bash(npm run bundle:*)",
      "Bash(npm run todo:*)",
      "Bash(npm run issue:*)",
      "Bash(npm ls:*)",
      "Bash(npx tsc:*)",
      "Bash(npx tsx:*)",
      "Bash(npx eslint:*)",
      "Bash(npx license-checker:*)",
      "Bash(node scripts/simple-issue-manager.js:*)",

      "comment: === GitHub CLI（Issue管理） ===",
      "Bash(gh issue list:*)",
      "Bash(gh issue view:*)",
      "Bash(gh issue create:*)",
      "Bash(gh issue edit:*)",
      "Bash(gh issue comment:*)",
      "Bash(gh issue close:*)",
      "Bash(gh issue reopen:*)",
      "Bash(gh label:*)",

      "comment: === 安全なディレクトリ操作 ===",
      "Bash(mkdir:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Bash(chmod:*)",

      "comment: === その他のユーティリティ ===",
      "Bash(curl:*)",
      "Bash(open:*)"
    ],

    "deny": [
      "comment: === 危険なディレクトリへの書き込み禁止 ===",
      "Edit(file_path:*node_modules*)",
      "Write(file_path:*node_modules*)",
      "MultiEdit(file_path:*node_modules*)",
      "Edit(file_path:*.git/*)",
      "Write(file_path:*.git/*)",
      "MultiEdit(file_path:*.git/*)",
      "Edit(file_path:*.next/*)",
      "Write(file_path:*.next/*)",
      "MultiEdit(file_path:*.next/*)",

      "comment: === 危険なコマンドの禁止 ===",
      "Bash(rm -rf:*)",
      "Bash(sudo:*)",
      "Bash(chmod 777:*)",
      "Bash(npm install -g:*)",
      "Bash(npx create-:*)",

      "comment: === システムファイルへのアクセス禁止 ===",
      "Edit(file_path:*/.env)",
      "Write(file_path:*/.env)",
      "Edit(file_path:*/.env.local)",
      "Write(file_path:*/.env.local)",
      "Edit(file_path:*/.env.production)",
      "Write(file_path:*/.env.production)"
    ],

    "defaultMode": "ask"
  },
  "claudeMd": ["docs/ai-chatbot/system-overview.md"]
}
