{
  "issueManagement": {
    "enabled": true,
    "createBranches": false,
    "trackCommitsAndBranches": true,
    "trackingFile": ".claude-session.json"
  },
  "workflow": {
    "autoCreateIssue": true,
    "linkCommitsToIssues": true,
    "recordBranchInfo": true,
    "branchStrategy": "flexible"
  },
  "labels": {
    "default": ["claude-code"],
    "priorityMapping": {
      "urgent": "P0-urgent",
      "high": "P1-high",
      "medium": "P2-medium",
      "low": "P3-low"
    },
    "sizeMapping": {
      "tiny": "size-XS",
      "small": "size-S",
      "medium": "size-M",
      "large": "size-L"
    }
  }
}
