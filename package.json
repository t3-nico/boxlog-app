    "dev:safe": "./scripts/dev-server-guard.sh",
    "dev:kill": "lsof -ti:3000 | xargs kill -9 2>/dev/null || echo 'No server running'",
    "prebuild": "tsx scripts/generate-licenses.ts",
    "build": "NODE_OPTIONS='--max-old-space-size=12288' next build",
    "start": "next start",
    "lint": "eslint . --max-warnings 30",
    "lint:fix": "eslint . --fix",
