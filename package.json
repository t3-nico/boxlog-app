    "bundle:analyze": "ANALYZE=true npm run build",
    "debt:report": "node scripts/tech-debt-report.js",
    "debt:json": "node scripts/tech-debt-report.js --json-only",
    "debt:analyze": "npm run lint:all && npm run debt:report",
